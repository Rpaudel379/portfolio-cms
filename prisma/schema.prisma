generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Skill {
  id      String  @id @default(uuid()) @db.Uuid
  name    String  @unique
  visible Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid()) @db.Uuid
  email     String
  phone     String
  location  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum WorkType {
  EDUCATION
  WORK
  PROJECT
  ACHIEVEMENT
  FREELANCE
}

model Timeline {
  id          String   @id @default(uuid()) @db.Uuid
  year        String
  title       String
  company     String?
  description String
  work_type   WorkType @default(WORK)
  skills      String?  @db.Text
  order       Int      @default(autoincrement())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProjectStatus {
  LIVE
  DEVELOPMENT
  INPROGRESS
  MAINTENANCE
  ARCHIVED
  COMPLETE
}

model Project {
  id           String        @id @default(uuid()) @db.Uuid
  title        String
  description  String
  tags         String[]
  category     String
  status       ProjectStatus @default(INPROGRESS)
  year         String?
  github       String?
  demo         String?
  features     String[]
  challenges   String?
  technologies Json?         @db.JsonB
  thumbnail    String?
  imageId      String?
  imagePath    String?
  visible      Boolean       @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
